{
  "root": true,
  "extends": "standard",
  "parser": "babel-eslint",
  "plugins": ["html"],
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "eol-last": ["error", "unix"],
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "no-multiple-empty-lines": ["error", {
      "max": 2
    }],
    "no-trailing-spaces": "error",
    "operator-linebreak": ["error", "before", {
      "overrides": {
        "=": "after"
      }
    }]
  }
}
